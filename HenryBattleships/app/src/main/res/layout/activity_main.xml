<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hmaug.battleships.MainActivity"
    android:background="@drawable/ocean">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:src="@drawable/title"
        android:id="@+id/Title"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="15dp"
        android:layout_y="75dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/quit"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/imageButton5"
        android:layout_alignStart="@+id/play"
        android:layout_x="1dp"
        android:layout_y="420dp"
        android:onClick="clickExit"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/btn_star"
        android:id="@+id/imageButton6"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignStart="@+id/leaderboard"
        android:layout_x="140dp"
        android:layout_y="420dp" />

    <Button
        android:text="Player vs Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:layout_y="300dp"
        android:id="@+id/PvP" />

    <Button
        android:text="Player vs AI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="110dp"
        android:layout_y="200dp"
        android:id="@+id/PvE" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_lock_silent_mode_off"
        android:layout_marginBottom="75dp"
        android:id="@+id/soundButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/sound"
        android:layout_x="290dp"
        android:layout_y="420dp" />

</AbsoluteLayout>
